<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="be.pxl.webandmobile.webandmobile.SelectClass"
    tools:showIn="@layout/activity_select_class">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:layout_margin="5dp"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

        <TextView
            android:id="@+id/klas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="Klas:"
            android:layout_alignParentTop="true"
            android:layout_alignBottom="@+id/dropdown"
            />

        <Button
            android:id="@+id/classSelectButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="Selecteer klas"
            android:layout_alignParentTop="true"/>

        <Spinner
            android:id="@+id/dropdown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/classSelectButton"
            android:layout_toRightOf="@id/klas"
            android:layout_alignParentTop="true"/>

        <Button
            android:id="@+id/saveButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="Opslaan"
            android:layout_alignParentBottom="true" />

    </RelativeLayout>



</android.support.constraint.ConstraintLayout>
